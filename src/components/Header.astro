---
import HeaderLink from "./HeaderLink.astro";
---

<header class="lg:flex py-4 pt-2 md:pt-10 gap-5 mb-6 lg:mb-10 w-full">
  <div class="flex flex-row w-full justify-between items-end pb-4 lg:pb-0">
    <a href="/" class="text-xl font-semibold text-white hover:text-gold no-underline hover:no-underline">Gabriele Nosso</a>
    <ul class="flex flex-row gap-5">
      <li class="flex items-center"><HeaderLink href="/">Art</HeaderLink></li>
      <li class="flex items-center"><HeaderLink href="/me">Me</HeaderLink></li>
      <li class="flex items-center"><HeaderLink href="/colors">Colors</HeaderLink></li>
      <li class="flex items-center">
        <a href="#" id="contact-link" class="nav-link">Contact</a>
      </li>
    </ul>
  </div>
</header>

<style>
  .nav-link {
    display: inline-block;
    text-decoration: none;
    color: #d4af37;
  }
</style>

<script>
  const c = document.getElementById('contact-link');
  if (c) {
    const e = 'tnoevryrabffb@tznvy.pbz';
    const d = (s: string) => s.replace(/[a-zA-Z]/g, (ch) => {
      const b = ch <= 'Z' ? 65 : 97;
      return String.fromCharCode(((ch.charCodeAt(0) - b + 13) % 26) + b);
    });
    c.addEventListener('click', (ev) => {
      ev.preventDefault();
      window.location.href = ['m','a','i','l','t','o',':'].join('') + d(e);
    });
  }
</script>
