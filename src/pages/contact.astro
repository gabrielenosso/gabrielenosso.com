---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Contact - ${SITE_TITLE}`} description="Get in touch with Gabriele Nosso" />
  </head>
  <body class="w-full max-w-screen-xl mx-auto my-4 px-4 bg-night-blue text-white transition-colors duration-300">
    <Header />
    <main class="flex flex-col items-center justify-center min-h-[60vh]">
      <div class="w-full max-w-md">
        
        <form id="contact-form" class="flex flex-col gap-4">
          <div>
            <label for="email" class="block text-sm text-light-blue mb-1">Your Email</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required 
              class="w-full px-4 py-3 bg-[#162337] border border-light-blue/30 rounded text-white focus:border-gold focus:outline-none"
              placeholder="your@email.com"
            />
          </div>
          
          <div>
            <label for="message" class="block text-sm text-light-blue mb-1">Message</label>
            <textarea 
              id="message" 
              name="message" 
              required 
              rows="6"
              class="w-full px-4 py-3 bg-[#162337] border border-light-blue/30 rounded text-white focus:border-gold focus:outline-none resize-none"
              placeholder="Your message..."
            ></textarea>
          </div>
          
          <button 
            type="submit" 
            id="submit-btn"
            class="w-full py-3 bg-gold text-night-blue font-bold rounded hover:opacity-90 transition-opacity"
          >
            Send Message
          </button>
        </form>
        
        <div id="form-status" class="text-center hidden"></div>
      </div>
    </main>
    <Footer />
  </body>
</html>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const status = document.getElementById('form-status') as HTMLDivElement;

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    submitBtn.disabled = true;
    submitBtn.textContent = 'Sending...';
    status.classList.add('hidden');
    
    const formData = new FormData(form);
    
    try {
      const response = await fetch('/contact/send.php', {
        method: 'POST',
        body: formData
      });
      
      const text = await response.text();
      
      // Check if response contains success:true
      if (text.indexOf('"success":true') !== -1) {
        form.style.display = 'none';
        status.textContent = 'âœ“ Message sent successfully!';
        status.className = 'text-center text-green-400 text-xl mt-8';
      } else {
        status.textContent = 'Failed to send message. Please try again.';
        status.className = 'text-center text-red-400';
        submitBtn.disabled = false;
        submitBtn.textContent = 'Send Message';
      }
    } catch (error) {
      status.textContent = 'Network error. Please try again.';
      status.className = 'text-center text-red-400';
      submitBtn.disabled = false;
      submitBtn.textContent = 'Send Message';
    }
  });
</script>
